<h1>投稿編集</h1>

<% if @book.errors.any? %>
  <div style="color: red;">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>



<%= form_with model:@book, url: post_path(@book),method: :patch, local: true do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "更新する" %>
  </p>
<% end %>

<%= link_to "戻る", posts_path %>