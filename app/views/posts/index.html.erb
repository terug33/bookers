<h1>新規投稿</h1>
  
<%= form_with model: @book, url:posts_path, local:true do |f| %>
  <p>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body,"感想" %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "投稿する" %>
  </p>

<% end %>

<h1>投稿一覧</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>タイトル</th>
    <th>感想</th>
    <th>操作</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", post_path(book) %> |
        <%= link_to "Edit", edit_post_path(book) %> |
        <%= link_to "Delete", post_path(book), method: :delete, data: {confirm:"本当に削除しますか？"} %>
      </td>
    </tr>
  <% end %>
</table>