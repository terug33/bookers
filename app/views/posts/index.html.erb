<h1>新規投稿</h1>

<% if @book.errors.any? %>
  <div style="color: red;">
    <h2><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
         <li><%= message %></li>
      <% end %>
    </ul>
    </div>
<% end %>
  
<%= form_with model: @book, url:posts_path, local:true do |f| %>
  <p>
    <%= f.label :title, "Title" %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body,"感想" %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "投稿する" %>
  </p>

<% end %>

<h1>投稿一覧</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>本のタイトル</th>
    <th>感想</th>
    <th>操作</th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.id %></td>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>
        <%= link_to "Show", post_path(book) %> |
        <%= link_to "Edit", edit_post_path(book) %> |
        <%= link_to "Delete", post_path(book), method: :delete, data: {confirm:"本当に削除しますか？"} %>
      </td>
    </tr>
  <% end %>
</table>